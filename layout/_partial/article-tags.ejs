<% if (item.tags && item.tags.length){ %>
  <%
      var tags = [];
      item.tags.forEach(function(tag){
          tags.push('<i class="fa fa-tags" aria-hidden="true"></i><a href="' + config.root + tag.path + '" class="tag">' + tag.name + '</a>');
      });
  %>
  <div class="blog-tags-container">
      <%- tags.join(' ') %>
  </div>
<% } %>